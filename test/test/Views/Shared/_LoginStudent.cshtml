@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav align-content-end">
@if (SignInManager.IsSignedIn(User) && SignInManager.Context.User.IsInRole("Student"))
{
    <li class="nav-item">
        <a class="nav-link text-light" asp-area="" asp-controller="Lectures" asp-action="Index">Lectures</a>
    </li>
    <li class="nav-item">
		<a class="nav-link text-light" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Student: @User.Identity?.Name</a>
       </li>
    
}
</ul>
