<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bcProjekt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/bcProjekt.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <h1>Autentifikace uživatelů v učebně</h1>
        <div class="login">
            <button class="dropbtn">Přihlášení</button>
        </div>  
        <div class="dropdown">
            <button class="dropbtn">Home</button>
            <nav class="dropdown-content">
                <ul>
                    <li><a href="index.html">Přihlašení</a></li>
                    <li><a href="gallery.html">Gallery</a></li>
                    <li><a href="table.html">Tables</a></li>
                    <li><a href="form.html">Form</a></li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - bcProjekt - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>